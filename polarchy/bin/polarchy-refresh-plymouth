#!/bin/bash

# Overwrite the user config for the Plymouth drive decryption and boot sequence with the Polarchy default and rebuild it.

sudo cp ~/.local/share/polarchy/default/plymouth/* /usr/share/plymouth/themes/polarchy/
sudo plymouth-set-default-theme polarchy

if command -v limine-mkinitcpio &>/dev/null; then
  sudo limine-mkinitcpio
else
  sudo mkinitcpio -P
fi
