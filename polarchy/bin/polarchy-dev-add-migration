#!/bin/bash

# Creates a new Polarchy migration named after the unix timestamp of the last commit.
# Only intended for Polarchy developers.

cd ~/.local/share/polarchy
migration_file="$HOME/.local/share/polarchy/migrations/$(git log -1 --format=%cd --date=unix).sh"
touch $migration_file

if [[ "$1" != "--no-edit" ]]; then
  nvim $migration_file
fi

echo $migration_file
